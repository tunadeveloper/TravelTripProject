@model List<TravelTripProject.Models.Classes.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>İletişim</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="table-responsive pt-3">
                <table class="table table-striped project-orders-table">
                    <thead>
                        <tr>
                            <th class="ml-5">#</th>
                            <th>Açıklama</th>
                            <th>Konum</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.Description.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)</td>
                                <td>@(item.Map.Length > 30 ? item.Map.Substring(0, 30) + "..." : item.Map)</td>
                                <th><a href="/AdminContact/UpdateContact/@item.Id" class="btn btn-success">Güncelle</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

