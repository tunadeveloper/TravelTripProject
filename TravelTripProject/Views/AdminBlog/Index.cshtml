@model List<TravelTripProject.Models.Classes.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Blog</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="table-responsive pt-3">
                <table class="table table-striped project-orders-table">
                    <thead>
                        <tr>
                            <th class="ml-5">#</th>
                            <th>Başlık</th>
                            <th>Görsel</th>
                            <th>Tarih</th>
                            <th>Yer</th>
                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.Title == null ? item.Title = " " : (item.Title.Length > 40 ? item.Title.Substring(0, 40) + "..." : item.Title))</td>
                                <td><img src="@item.Image" /></td>
                                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                <td>@item.City</td>
                                <th><a href="/AdminBlog/DeleteBlog/@item.Id" class="btn btn-danger">Sil</a></th>
                                <th><a href="/AdminBlog/UpdateBlog/@item.Id" class="btn btn-success">Güncelle</a></th>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<a href="/AdminBlog/CreateBlog/" class="btn btn-info">Yeni Blog Yaz</a>