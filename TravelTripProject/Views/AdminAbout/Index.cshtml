@model List<TravelTripProject.Models.Classes.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@foreach (var item in Model)
{
    if (item.Image != null)
    {
        <div style="text-align: center;">
            <img src="@item.Image" style="height:200px; width:200px; border-radius:50%;" />
            <br />
            <br />
            <a href="/AdminAbout/UpdateImage/@item.Id" class="btn btn-success">Görseli Güncelle</a>
        </div>
        
    }
}
<br /><br />
      <h4>Hakkımızda</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="table-responsive pt-3">
                <table class="table table-striped project-orders-table">
                    <thead>
                        <tr>
                            <th class="ml-5">#</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                                <th><a href="/AdminAbout/DeleteDescription/@item.Id" class="btn btn-danger">Sil</a></th>
                                <th><a href="/AdminAbout/UpdateDescription/@item.Id" class="btn btn-success">Güncelle</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<a href="/AdminAbout/CreateDescription/" class="btn btn-info">Yeni Açıklama Ekle</a>