@model List<TravelTripProject.Models.Classes.SocialMedia>

<br />
<h4>Sosyal Medya Hesaplarım</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="table-responsive pt-3">
                <table class="table table-striped project-orders-table">
                    <thead>
                        <tr>
                            <th class="ml-5">#</th>
                            <th>Sosyal Medya Adı</th>
                            <th>Icon</th>
                            <th>URL</th>
                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.SocialMediaName</td>
                                <td>@item.Icon</td>
                                <td>@(item.Url.Length > 50 ? item.Url.Substring(0, 50) + "..." : item.Url)</td>
                                <th><a href="/AdminWhosMe/DeleteSocialMedia/@item.Id" class="btn btn-danger">Sil</a></th>
                                <th><a href="/AdminWhosMe/UpdateSocialMedia/@item.Id" class="btn btn-success">Güncelle</a></th>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<a href="/AdminWhosMe/CreateSocialMedia/" class="btn btn-info">Yeni Hesap Ekle</a>
