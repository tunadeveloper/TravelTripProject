@model List<TravelTripProject.Models.Classes.Home>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Anasayfa</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="table-responsive pt-3">
                <table class="table table-striped project-orders-table">
                    <thead>
                        <tr>
                            <th class="ml-5">#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Görsel</th>
                            <th>Güncelle</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.HeadImageTitle.Length > 30 ? item.HeadImageTitle.Substring(0, 30) + "..." : item.HeadImageTitle)</td>
                                <td>@(item.HeadImageDescription.Length > 30 ? item.HeadImageDescription.Substring(0, 30) + "..." : item.HeadImageDescription)</td>
                                <td><img src="@item.HeadImage" alt="@item.HeadImageTitle" style="width:60px; height:60px;"/></td>
                                <th><a href="/AdminHome/UpdateHome/@item.Id" class="btn btn-success">Güncelle</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<br />
<br />
@Html.Action("PartialContentImage", "AdminHome")