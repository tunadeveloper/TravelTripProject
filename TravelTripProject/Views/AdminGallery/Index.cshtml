@model List<TravelTripProject.Models.Classes.Gallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Galeri</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="table-responsive pt-3">
                <table class="table table-striped project-orders-table">
                    <thead>
                        <tr>
                            <th class="ml-5">#</th>
                            <th>Görsel</th>
                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><img src="@item.Image" /></td>
                                <th><a href="/AdminGallery/DeleteGallery/@item.Id" class="btn btn-danger">Sil</a></th>
                                <th><a href="/AdminGallery/UpdateGallery/@item.Id" class="btn btn-success">Güncelle</a></th>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<a href="/AdminGallery/CreateImage/" class="btn btn-info">Yeni Görsel Ekle</a>